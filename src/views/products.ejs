<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head') %>
<body>
	<!-- Header -->
	<%- include("./partials/headerNavbar")%>
	<!-- /Header -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Todos los productos</h2>
			</div>

			<% for (i = 0; i < productos.length; i++) { %>
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%=productos[i].id%>">
						<figure class="product-box_image">
							<img src="/images/products/<%=productos[i].image%>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<% let precioFinal = productos[i].price -(productos[i].discount*productos[i].price/100)
							precioFinal = Math.round(precioFinal) %>
							<h2>$ <%= toThousand(precioFinal) %></h2>
							<span><%=productos[i].discount %>% OFF</span>
							<p><%=productos[i].name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% } %>
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>