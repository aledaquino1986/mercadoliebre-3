<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Resultados de tu búsqueda'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- todos los productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Resultados de la búsqueda: <%=search%> </h2>
			</div>
			<% productosEncontrados.forEach(productosEncontrados => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%=productosEncontrados.id%>">
							<figure class="product-box_image">
								<img src="/images/products/<%=productosEncontrados.image%>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<% let precioFinal = productosEncontrados.price -(productosEncontrados.discount*productosEncontrados.price/100)
							precioFinal = Math.round(precioFinal) %>
								<h2>$<%=toThousand(productosEncontrados.price)%></h2>
								<span><%=productosEncontrados.discount%> % OFF</span>
								<p><%=productosEncontrados.name%> </p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>
				<%	}) %>

			<div class="col-12">
				<h2 class="products-title" style="color: tomato;">No hay productos que coincidan con esa búsqueda</h2>
			</div>
		</div>
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>